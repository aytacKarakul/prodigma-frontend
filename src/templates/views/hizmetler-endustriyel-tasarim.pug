                    +picture({sm:require("Upload/hizmetler-endustriyel-tasarim-banner-mb.jpg"),lg:require("Upload/hizmetler-endustriyel-tasarim-banner.jpg")})(alt="Prodigma Endüstriyel Tasarım")
