extends blocks/layout

block prepend head
    - pageTitle = "İletişim"
    - pageDesc = "İletişim açıklama metni"
    - pageClass = "contact"

block content
    .pcontact
        +hero-banner('İletişim', {sm:'https://via.placeholder.com/375', lg:'https://via.placeholder.com/1440x500'})
        .pcontact-wrapper 
            .pcontact-body
                include widgets/contact-banner/index.pug
                .pcontact-body-form
                    .pcontact-body-form-title İletişim Formunu Doldurun
                    .pcontact-body-form-content
                        .pcontact-body-form-content-left
                            +inputs('textbox','Ad Soyad')
                            +inputs('textbox','E-Posta Adresi')
                            +inputs('textbox','Cep Telefonu')
                        .pcontact-body-form-content-right
                            +inputs('textarea','Mesaj')
                    .pcontact-body-form-btn
                        +button('Mesajı Gönder', 'green', 's')