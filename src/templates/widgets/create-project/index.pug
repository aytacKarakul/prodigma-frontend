.create-project
    .create-project-wrapper
        .create-project-header
            .create-project-header-title Prodigma ile bir proje oluşturmaya hazır mısın?
            .create-project-header-desc Hemen oluşturmak istediğin proje türünü seç, adım adım özelliklere karar ver, Prodigma senin için üretsin!
        .create-project-body 
            .swiper.create-project-swiper
                .swiper-wrapper
                    .swiper-slide
                        button(data-url='/3d-baski.html')
                            img(src='https://via.placeholder.com/380x380.png', alt='3D Baskı')
                        span 3D Baskı
                    .swiper-slide
                        button(data-url='/cnc-isleme.html')
                            img(src='https://via.placeholder.com/380x380.png', alt='CNC İşleme')
                        span CNC İşleme
                    .swiper-slide
                        button(data-url='/silikon-kaliplama.html')
                            img(src='https://via.placeholder.com/380x380.png', alt='Silikon Kalıplama')
                        span Silikon Kalıplama
                    .swiper-slide
                        button(data-url='/enjeksiyon-kaliplama.html')
                            img(src='https://via.placeholder.com/380x380.png', alt='Enjeksiyon Kalıplama')
                        span Enjeksiyon Kalıplama
                    .swiper-slide
                        button(data-url='/sac-metal-isleme.html')
                            img(src='https://via.placeholder.com/380x380.png', alt='Sac Metal İşleme')
                        span Sac Metal İşleme
                    .swiper-slide
                        button(data-url='/endustriyel.html')
                            img(src='https://via.placeholder.com/380x380.png', alt='Endüstriyel Tasarım')
                        span Endüstriyel Tasarım
                    .swiper-slide
                        button(data-url='/3d-tarama-tersine-muhendislik.html')
                            img(src='https://via.placeholder.com/380x380.png', alt='3D Tarama ve Tersine Mühendislik')
                        span 3D Tarama ve Tersine Mühendislik
                    .swiper-slide
                        button(data-url='/ardil-islemler.html')
                            img(src='https://via.placeholder.com/380x380.png', alt='Ardıl işlemler')
                        span Ardıl işlemler
                .swiper-pagination.hidden
        .create-project-footer
            .create-project-footer-btn
                +button('Sonraki Adım', 'gray' ,'m', badgy={icon:'arrow-line'})(href="#", id='js-next-to-step-first', disabled)